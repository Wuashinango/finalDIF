<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lin_uno"
    android:layout_gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginTop="70dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="60dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/aprobado" />

    <TextView
        android:id="@+id/textViewNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Número:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewApellido1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido Paterno:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewApellido2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido Materno:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewCurp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURP:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Completo:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewFechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="País:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción 1" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opción 2" />



    </com.google.android.material.chip.ChipGroup>



    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCANEAR OTRO QR"
        android:backgroundTint="@color/rosadoDif"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>
