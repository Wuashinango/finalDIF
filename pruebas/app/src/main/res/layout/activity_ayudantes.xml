<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lin_uno"
    android:layout_gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginTop="70dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="60dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="SE HA REGISTRADO EL AYUDANTE"
        android:textSize="21dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/cocinero" />

    <TextView
        android:id="@+id/textViewNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Número:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewApellido1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido Paterno:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewApellido2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido Materno:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewCurp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURP:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Completo:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewFechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <TextView
        android:id="@+id/textViewPais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="País:"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="start" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">



    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCANEAR AYUDANTE"
        android:backgroundTint="@color/rosadoDif"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/verde"
        android:text="MENU PRINCIPAL"
        android:id="@+id/btn_menu"/>

</LinearLayout>